          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Token JWT d'authentification"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"clientId\": 1,\n  \"tourCou\": 38.5,\n  \"poitrine\": 95.0,\n  \"taille\": 85.0,\n  \"manche\": 60.0,\n  \"longueurDos\": 45.0,\n  \"jambe\": 105.0,\n  \"epaule\": 42.0,\n  \"bras\": 32.0\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/mesures",
          "host": ["{{baseUrl}}"],
          "path": ["api", "mesures"]
        }
      },
      "response": []
    },
    {
