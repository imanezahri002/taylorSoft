{
  "info": {
    "name": "TaylorSoft_Tissu_API",
    "description": "Collection pour tester les endpoints de l'API Tissu",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Créer un tissu",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "description": "Token JWT d'authentification"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reference\": \"TIS-001\",\n  \"nom\": \"Coton Premium\",\n  \"largeur\": 150.0,\n  \"active\": true,\n  \"typeTissuId\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tissu",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tissu"]
        }
      },
      "response": []
    },
    {
      "name": "Récupérer tous les tissus",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
